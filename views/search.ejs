<script>
    let age_min = 18;
    let age_max = 100;
    let score_min = 0;
    let score_max = 1000;
    let location_filter = 15000;


    if('<%=locals.filter_age_left%>' !== '')
    {
        age_min = parseInt(<%=locals.filter_age_left%>);
    }
    if('<%=locals.filter_age_right%>' !== '')
    {
        age_max = parseInt(<%=locals.filter_age_right%>);
    }
    if('<%=locals.filter_popularity_left%>' !== '')
