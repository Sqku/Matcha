<script src="static/js/bootstrap-tokenfield.js"></script>



<script>

    let data = $('#data').val().split(",");
    let deleted = "";


    $('#tags').tokenfield({
        autocomplete: {
//            source: ['red','blue','green','yellow','violet','brown','purple','black','white'],
            source: data,

            delay: 100
        },
        showAutocompleteOnFocus: true

    })

    $('#tags').on('tokenfield:createtoken', function (event) {
        var existingTokens = $(this).tokenfield('getTokens');
        $.each(existingTokens, function(index, token) {
            if (token.value === event.attrs.value || event.attrs.value.length > 20)
            {
                event.preventDefault();
            }
        });
    });

    $('#tags').on('tokenfield:removedtoken', function (e) {
//        alert('Token removed! Token value was: ' + e.attrs.value)

        if(deleted == "")
            deleted = e.attrs.value;
        else
            deleted = deleted + "," + e.attrs.value;
        document.getElementById("deleted_tags").value = deleted;
    });

</script>



<% include fin %>


