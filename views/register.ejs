<div class="container">
    <h1 class="well">Create your account</h1>
    <div class="col-lg-12 well">
        <div class="row">
            <form method="post">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6 form-group <%= locals.errors !== undefined && locals.errors.first_name !== undefined ? "has-error has-feedback": ""%>">
                            <% if (locals.errors !== undefined && locals.errors.first_name !== undefined) { %>
                            <label class="control-label" for="inputError1">Invalid</label>
                            <% } %>
                            <label>First Name</label>
                            <input value="<%= locals.body !== undefined ? locals.body.first_name : "" %>" type="text" name="first_name" placeholder="Enter your First Name" class="form-control">

                        </div>
                        <div class="col-sm-6 form-group <%= locals.errors !== undefined && locals.errors.last_name !== undefined ? "has-error has-feedback": ""%>">
                            <% if (locals.errors !== undefined && locals.errors.last_name !== undefined) { %>
                            <label class="control-label" for="inputError1">Invalid</label>
                            <% } %>
                            <label>Last Name</label>
                            <input value="<%= locals.body !== undefined ? locals.body.last_name : "" %>" type="text" name="last_name" placeholder="Enter your Last Name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group <%= locals.errors !== undefined && locals.errors.user_name !== undefined ? "has-error has-feedback": ""%>">
                        <% if (locals.errors !== undefined && locals.errors.user_name !== undefined) { %>
                        <label class="control-label" for="inputError1"><%= locals.errors.user_name %></label>
                        <%}
                        else {
                        %>
                        <label>User name</label>
                        <%}%>
                        <input value="<%= locals.body !== undefined ? locals.body.user_name : "" %>" type="text" name="user_name" placeholder="Choose an user name" class="form-control">
                    </div>
                    <div class="form-group <%= locals.errors !== undefined && locals.errors.password !== undefined ? "has-error has-feedback": ""%>">
                        <% if (locals.errors !== undefined && locals.errors.password !== undefined) { %>
                        <label class="control-label" for="inputError1">Invalid</label>
                        <% } %>
                        <label>Password</label>
                        <input type="password" name="password" placeholder="Enter your Password" class="form-control">
                    </div>
                    <div class="form-group <%= locals.errors !== undefined && locals.errors.confirm_password !== undefined ? "has-error has-feedback": ""%>">
                        <% if (locals.errors !== undefined && locals.errors.confirm_password !== undefined) { %>
                        <label class="control-label" for="inputError1">Invalid</label>
                        <% } %>
                        <label>Password Confirmation</label>
                        <input type="password" name="confirm_password" placeholder="Confirm your Password" class="form-control">
                    </div>
                    <div class="form-group <%= locals.errors !== undefined && locals.errors.email !== undefined ? "has-error has-feedback": ""%>">
                        <% if (locals.errors !== undefined && locals.errors.email !== undefined) { %>
                        <label class="control-label" for="inputError1">Invalid</label>
                        <% } %>
                        <label>Email</label>
                        <input value="<%= locals.body !== undefined ? locals.body.email : "" %>" type="text" name="email" placeholder="Enter your Email" class="form-control">
                    </div>
                    <div class="form-group <%= locals.errors !== undefined && locals.errors.age !== undefined ? "has-error has-feedback": ""%>">
                        <% if (locals.errors !== undefined && locals.errors.age !== undefined) { %>
                        <label class="control-label" for="inputError1">Invalid</label>
                        <% } %>
                        <label>Age</label>
                        <input value="<%= locals.body !== undefined ? locals.body.age : "" %>" type="text" name="age" placeholder="How old are you ?" class="form-control">
                    </div>
                    <div class="form-group <%= locals.errors !== undefined && locals.errors.radio !== undefined ? "has-error has-feedback": ""%>">
                        <% if (locals.errors !== undefined && locals.errors.radio !== undefined) { %>
                        <label class="control-label" for="inputError1">Invalid</label>
                        <% } %>
                        <label>Gender</label>   </br>
                        <!--<input type="text" placeholder="Man or Woman" class="form-control">-->
                        <div class="radio-inline">
                            <label>
                                <input type="radio" name="gender" id="gender_male" value="man" <%= locals.body !== undefined && locals.body.gender == 'man' ? "checked" : "" %>>
                                Man
                            </label>
                        </div>
                        <div class="radio-inline">
                            <label>
                                <input type="radio" name="gender" id="gender_female" value="woman" <%= locals.body !== undefined && locals.body.gender == 'woman' ? "checked" : "" %>>
                                Woman
                            </label>
                        </div>

                    </div>


                    <button type="submit" class="btn btn-lg btn-info" value="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


